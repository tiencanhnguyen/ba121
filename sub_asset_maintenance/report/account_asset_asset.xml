<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_simple_account_assetcode">
            <div style="width: 32%; display: inline-table; height: 10rem;">
                <table class="table table-bordered mb-0" style="border: 2px solid black;">
                    <tr>
                        <th class="table-active text-left" style="height: 4rem;">
                            <strong t-field="asset.name"/>
                        </th>
                    </tr>
                    <tr>
                        <td class="text-center align-middle" style="height: 6rem;">
                            <t t-if="asset.asset_code">
                                <img alt="Barcode" t-if="len(asset.asset_code) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', asset.asset_code, 600, 150)" style="width:100%;height:4rem;"/>
                                <img alt="Barcode" t-elif="len(asset.asset_code) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', asset.asset_code, 600, 150)" style="width:100%;height:4rem;"/>
                                <img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', asset.asset_code, 600, 150)" style="width:100%;height:4rem"/>
                                <span t-field="asset.asset_code"/>
                            </t>
                            <t t-else=""><span class="text-muted">No barcode available</span></t>
                        </td>
                    </tr>
                </table>
            </div>
        </template>

        <template id="report_assetcode">
            <t t-call="web.basic_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="asset">
                        <t t-call="sub_custom_field_asset_maintenance.report_simple_account_assetcode">
                            <t t-set="asset" t-value="asset"/>
                        </t>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>
